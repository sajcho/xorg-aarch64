# Description:	A cross-platform C/C++ extension loading library
# URL:		http://glew.sourceforge.net
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	glu libxi libxmu

name=glew
version=2.2.0
release=2
source=(https://github.com/nigels-com/${name}/releases/download/${name}-${version}/${name}-${version}.tgz)

build() {
	cd ${name}-${version}

	sed -i 's|lib64|lib|' config/Makefile.linux

	make V=1 CFLAGS.EXTRA="$CFLAGS -fPIC"

	make GLEW_DEST=$PKG/usr install

	find $PKG -type f -name '*.a' -delete
}
